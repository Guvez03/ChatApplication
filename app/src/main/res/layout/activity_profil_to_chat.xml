<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilToChatActivity"
    android:background="@drawable/background">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        ></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="6dp"
        android:background="@drawable/radius"
        android:orientation="vertical">
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/visit_profile_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80sp"
            android:layout_marginEnd="65sp"
            android:layout_marginRight="65sp"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="5sp"
            android:src="@drawable/profile_image"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/user_profil_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/visit_profile_image"
            android:layout_marginTop="10dp"
            android:text="username"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/user_profil_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profil_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="Hey merhaba Ben ChapApp kullanıcısıyım"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:background="@drawable/textedit2"
            android:textSize="25sp"
            android:textStyle="normal"></TextView>

        <Button
            android:id="@+id/send_message_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profil_status"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_backgroundiki"
            android:text="Mesaj Gönder"
            android:textColor="@android:color/background_light"
            android:textSize="18dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/decline_message_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_message_request_button"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_backgroundiki"
            android:text="Chat İsteğini Reddet"
            android:textColor="@android:color/background_light"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="invisible"></Button>


</RelativeLayout>